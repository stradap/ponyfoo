  .gd, // Generic.Deleted
  .no, // Name.Constant
  .ne, // Name.Exception
  .nv, // Name.Variable
  .vc, // Name.Variable.Class
  .vg, // Name.Variable.Global
  .vi // Name.Variable.Instance

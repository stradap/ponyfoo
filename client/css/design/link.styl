o-visited = 0.04
a,
button
  col-outline-clear()

a,
button,
input[type='submit']
  cursor pointer
  text-decoration none

// prime styles for :visited links
lk-link-visited-normal()
  &
    background-color rgba(#fff, o-visited)
  & .md-code-inline
    position relative
    &:only-child
      display inline-block
      line-height 17px
    &:before
      content ''
      position absolute
      background-color c-yellow
      top 0
      left 0
      right 0
      bottom 0
      opacity o-visited

lk-link-visited-already()
  &
    background-color rgba(c-pink, o-visited)
  & .md-code-inline:before
    background-color c-pink

lk-link-normal()
  color c-pink
  border-bottom 1px solid transparent
  lk-link-visited-normal()

lk-link-rare(child)
  {child}
    lk-link-normal()
  &:active {child}
    col-outline(c-pink)
  &:visited {child}
    lk-link-visited-already()
  &:hover {child}
    border-bottom 1px solid c-pink

lk-link()
  lk-link-rare('')

.lk-link
  lk-link()

.lk-rainbows
  position relative
  color c-black-text
  margin-bottom 5px
  &:active
    col-outline(c-dark-gray)
  &:hover
    rainbow-pseudo()

.lk-icon
  color c-black-text
  &:active
    col-outline(c-dark-gray)
  &:hover
    color c-pink

lk-visitor(selector)
  color c-black-text
  &{selector}
    font-awesome()
    content '\f00c'
    color c-gray
    border-bottom 1px dotted c-gray
  &:hover{selector}
    color c-black-text
    border-bottom-style solid
  &:visited{selector}
    color c-bright-turquoise

.lk-visitor
  lk-visitor(':after')
  &:after
    margin-left 5px

.lk-visitor-inside
  lk-visitor(' .lk-visitor-target:before')
  .lk-visitor-target:before
    margin-right 5px

.lk-visitor-before
  lk-visitor(':before')
  &:before
    margin-right 5px

.lk-visitor-before-no-underline
  &:before
    border-bottom-width 0

.lk-link-to-green
  color c-gray

  &:visited,
  &:visited:before
    color c-dark-green
    background-color c-dark-green

  &:active
    outline-color c-dark-green

  &:hover,
  &:hover:before
    color c-dark-green-05
    border-bottom-color c-dark-green

lk-color(c-color)
  color c-color

  if c-color != inherit
    &:visited
      background-color rgba(c-color, o-visited)
    &:visited .md-code-inline:before
      background-color c-color

  &:active
    outline-color c-color

  &:hover
    border-bottom-color c-color

lk-color-select(c-color)
  /a&,
  .lk-link
    lk-color(c-color)

.lk-green
  lk-color-select(c-dark-green)

.lk-black
  lk-color-select(c-black-text)

.lk-white
  lk-color-select(c-white)

.lk-orange
  lk-color-select(c-dark-orange)

.lk-blue
  lk-color-select(c-blue)

.lk-inherited
  lk-color-select(inherit)

.lk-twitter
  lk-color-select(c-twitter-blue)

.lk-facebook
  lk-color-select(c-facebook-blue)

.lk-clean
  background-color transparent

.lk-chrome:hover
  color c-chrome-blue

.lk-teal
  lk-color-select(c-oreilly-teal)

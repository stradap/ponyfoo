section#comments.mm-comments
  h2.mm-heading
    span.mm-heading-text Comments
    if parent.commentCount
      span=' '
      span.mm-count='(' + parent.commentCount + ')'

  include thread

  footer.mm-footer
    if parent.commentOpen
      div.mm-footer-text.mm-footer-title Add your comments below. Be nice and mindful of others.
      include create
    else
      div.mm-footer-text The comments section is now closed.

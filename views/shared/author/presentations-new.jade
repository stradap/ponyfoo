article.ly-section.vw-maintainer.de-host
  form.vw-maintainer-content.de-column(action='/api/presentations/new', method='post')
    h1.vw-title New Presentation
    input.apn-title(name='title', placeholder='What is the name of your presentation?')
    input.apn-slug(name='slug', placeholder='name-of-presentation')
    input.apn-presented(name='presented', placeholder='DD-MM-YYYY of first time it was presented')
    div
      textarea.apn-description.wk-textarea(name='description', placeholder='Describe the presentation')
    input.apn-youtube(name='youtube', placeholder='YouTube video ID')
    input.apn-vimeo(name='vimeo', placeholder='Vimeo video ID')
    input.apn-speakerdeck(name='speakerdeck', placeholder='Speaker Deck presentation ID')
    div.apn-resources
      input.apn-resources-title(name='resources_title[]', placeholder='Relevant resource title')
      input.apn-resources-url(name='resources_url[]', placeholder='Relevant resource link')
    footer.apn-actions
      a.apn-add-resource.lk-link(aria-label='Add another related resource') Add extra resource
      a.apn-cancel.lk-link(href='/presentations/review', aria-label='Back to list of presentations') Cancel
      span(aria-label='Make the presentation public!')
        button.bt-button.bt-pink(type='submit') Publish

  include ../partials/aside

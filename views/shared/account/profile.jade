article.ly-section.vw-maintainer.de-host
  section.vw-maintainer-content.de-column
    h1.vw-title Profile Editor
    section
      input.cb-email(placeholder='Your email, please', value=profile.email)
      input.cb-half.cb-old-password(placeholder='Your old password, only if you wish to change it', type='password')
      input.cb-half.cb-password(placeholder='Your new password', type='password')
      input.cb-name(placeholder='Your name, please', value=profile.displayName)
      input.cb-slug.cb-half(placeholder='Your username, used in /contributors/your-username', value=profile.slug)
      input.cb-twitter.cb-half(placeholder='Your Twitter username, as in @ponyfoo', value=profile.twitter)
      input.cb-website(placeholder='A link to your website', value=profile.website)
      div.bx-input
        input.cb-avatar(placeholder='A link to an avatar image. Defaults to a gravatar.', value=profile.avatar)
      div.bx-icon
        div.fa.fa-picture-o
        input.bx-fileinput(type='file')
      div
        textarea.wk-textarea.cb-bio(placeholder='Your bio goes here!')=profile.bio

    h2 Bio Preview
    section.cb-preview.md-markdown

    footer.cb-actions
      if profile.slug
        a.lk-link(href='/contributors/' + profile.slug, aria-label='Back to contributor profile view') Back to Profile
      else
        a.lk-link(href='/', aria-label='Back to home page') Cancel
      button.bt-button.bt-pink.cb-save(type='submit') Save

  include ../partials/aside

article.ly-section.al-container.de-host
  section.al-logon.de-column
    section.al-logon-content
      h1.vw-title Authentication

      if providers.length
        section.al-providers
          each p in providers
            a(
              href=p.link,
              aria-label='Authenticate with ' + p.name,
              class='bt-button al-provider al-provider-#{p.slug}'
            )
              if p.css
                span(class=p.css)
              else
                span=p.name

        p.al-separator
         span='- or the '
         i old fashioned
         span=' way -'

      form.al-form(method='post', action='/account/login/local')
        input(type='hidden', name='redirect', value=previousUrl)

        p
          input(type='email', name='email', placeholder='Your email address')

        p
          input(type='password', name='password', placeholder='Your password')

        if registration
          p.al-registration
            input.ck-input#alf-create-checkbox.al-register(type='checkbox', name='create')
            label.ck-checkbox(for='alf-create-checkbox') New Account

        p
          span.de-button
            button.bt-button.bt-pink.al-submit(type='submit') Login

  include ../partials/aside

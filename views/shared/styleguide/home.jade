article.sy-container.sy-container-purple#colors
  h1.sy-title Colors

  each section in colors
    section.sycr-section
      h2.sycr-title=section.displayName
      table.sycr-reel
        - profiles = section.profiles.slice()
        while profiles.length
          tr.sycr-row
            each profile in profiles.slice(0, 4)
              - classes = 'sycr-color sycr-color-' + (profile.dark ? 'dark' : 'light')
              td(class=classes, style='background-color: ' + profile.hex + ';')
                span.sycr-color-name=profile.displayName
            - profiles = profiles.slice(4)

